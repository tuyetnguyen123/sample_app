<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.Post.avatar_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "microposts.micro.post_ago" %>  <%= time_ago_in_words micropost.created_at %>
    <% if current_user? micropost.user %>
      <%= link_to t("users.destroy.delete"), microposts_path, method: :delete,
                  data: { confirm: t("users.index.sure") } %>
    <% end %>
  </span>
</li>
