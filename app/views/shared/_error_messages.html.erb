<% if @user.errors.any? %>
  <div id="error-explanation">
    <div class="alert alert-danger">
      <%= t ".contain" %><%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
